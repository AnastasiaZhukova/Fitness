<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="com.google.android.material.card.MaterialCardView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/sectionLabel"
            android:layout_width="0dp"
            style="@style/SectionLabelTextView"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/defaultMargin"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/workout_section_label"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/ic_workout_ready_background"
            app:layout_constraintBottom_toTopOf="@id/startWorkoutButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintTop_toBottomOf="@id/sectionLabel"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/workoutDuration"
            style="@style/WorkoutLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/defaultMargin"
            android:text="@string/no_data_label"
            app:layout_constraintBaseline_toBaselineOf="@id/startWorkoutButton"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="24 min"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/workoutCalories"
            style="@style/WorkoutLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/defaultMargin"
            android:text="@string/no_data_label"
            app:layout_constraintBaseline_toBaselineOf="@id/startWorkoutButton"
            app:layout_constraintStart_toEndOf="@id/workoutDuration"
            tools:text="314 cal"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/startWorkoutButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/defaultMargin"
            android:layout_marginBottom="16dp"
            android:text="@string/workout_ready_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintWidth_default="wrap" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>