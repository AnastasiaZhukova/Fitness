<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.anastasiazhukova.fitness.admin">

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".screens.activity.launch.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.activity.authentication.AuthenticationActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".screens.activity.clientDetails.presentation.ClientDetailsActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".screens.activity.main.MainActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".screens.activity.workoutPlan.presentation.WorkoutPlanActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>